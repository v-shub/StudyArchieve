@page "/admin/subjects"
@using BlazorClient.Services.Contracts.Subject
@inject ApiService ApiService

<PageTitle>Управление учебными дисциплинами</PageTitle>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-book me-2"></i>Управление учебными дисциплинами</h2>
        <button class="btn btn-primary" @onclick="ShowAddModal">
            <i class="bi bi-plus-circle me-2"></i>Добавить дисциплину
        </button>
    </div>

    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Загрузка...</span>
            </div>
            <p class="mt-2">Загрузка данных...</p>
        </div>
    }
    else if (subjects?.Any() == true)
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Название дисциплины</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var subject in subjects)
                            {
                                <tr>
                                    <td>@subject.Id</td>
                                    <td>
                                        @if (isEditing == subject.Id)
                                        {
                                            <input @bind="editSubjectName" class="form-control form-control-sm" />
                                        }
                                        else
                                        {
                                            @subject.Name
                                        }
                                    </td>
                                    <td>
                                        @if (isEditing == subject.Id)
                                        {
                                            <button class="btn btn-success btn-sm me-2" @onclick="() => SaveEdit(subject.Id)">
                                                <i class="bi bi-check"></i>
                                            </button>
                                            <button class="btn btn-secondary btn-sm" @onclick="CancelEdit">
                                                <i class="bi bi-x"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-warning btn-sm me-2" @onclick="() => StartEdit(subject)">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button class="btn btn-danger btn-sm" @onclick="() => ShowDeleteModal(subject)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>Дисциплины не найдены
        </div>
    }
</div>

<!-- Модальное окно добавления -->
@if (showAddModal)
{
    <div class="modal show d-block" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Добавить учебную дисциплину</h5>
                    <button type="button" class="btn-close" @onclick="CloseAddModal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Название дисциплины:</label>
                        <input @bind="newSubjectName" class="form-control" placeholder="Введите название дисциплины" />
                        @if (!string.IsNullOrEmpty(validationError))
                        {
                            <div class="text-danger small mt-1">@validationError</div>
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseAddModal">Отмена</button>
                    <button type="button" class="btn btn-primary" @onclick="AddSubject" disabled="@isSaving">
                        @if (isSaving)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                        }
                        Добавить
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Модальное окно удаления -->
@if (showDeleteModal && subjectToDelete != null)
{
    <div class="modal show d-block" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Подтверждение удаления</h5>
                    <button type="button" class="btn-close" @onclick="CloseDeleteModal"></button>
                </div>
                <div class="modal-body">
                    <p>Вы уверены, что хотите удалить дисциплину <strong>"@subjectToDelete.Name"</strong>?</p>
                    <p class="text-danger"><small>Это действие нельзя отменить.</small></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseDeleteModal">Отмена</button>
                    <button type="button" class="btn btn-danger" @onclick="DeleteSubject" disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                        }
                        Удалить
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<GetSubjectResponse> subjects = new();
    private bool isLoading = true;
    private bool showAddModal = false;
    private bool showDeleteModal = false;
    private bool isSaving = false;
    private bool isDeleting = false;
    private string newSubjectName = string.Empty;
    private string validationError = string.Empty;
    private GetSubjectResponse? subjectToDelete = null;
    private int? isEditing = null;
    private string editSubjectName = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadSubjects();
    }

    private async Task LoadSubjects()
    {
        try
        {
            isLoading = true;
            StateHasChanged();

            // Замена: Http.GetFromJsonAsync -> ApiService.GetFromJsonAsync
            subjects = await ApiService.GetFromJsonAsync<List<GetSubjectResponse>>("api/Subject") ?? new();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка загрузки дисциплин: {ex.Message}");
            subjects = new();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void ShowAddModal()
    {
        showAddModal = true;
        newSubjectName = string.Empty;
        validationError = string.Empty;
    }

    private void CloseAddModal()
    {
        showAddModal = false;
        validationError = string.Empty;
    }

    private async Task AddSubject()
    {
        if (string.IsNullOrWhiteSpace(newSubjectName))
        {
            validationError = "Поле не может быть пустым";
            return;
        }

        isSaving = true;
        StateHasChanged();

        try
        {
            var request = new CreateSubjectRequest { Name = newSubjectName.Trim() };

            // Замена: Http.PostAsJsonAsync -> ApiService.PostAsJsonAsync
            var response = await ApiService.PostAsJsonAsync("api/Subject", request);

            if (response.IsSuccessStatusCode)
            {
                showAddModal = false;
                newSubjectName = string.Empty;
                await LoadSubjects();
            }
            else
            {
                validationError = "Ошибка при добавлении дисциплины";
            }
        }
        catch (Exception ex)
        {
            validationError = "Ошибка соединения с сервером";
            Console.WriteLine($"Ошибка добавления дисциплины: {ex.Message}");
        }
        finally
        {
            isSaving = false;
            StateHasChanged();
        }
    }

    private void StartEdit(GetSubjectResponse subject)
    {
        isEditing = subject.Id;
        editSubjectName = subject.Name;
    }

    private void CancelEdit()
    {
        isEditing = null;
        editSubjectName = string.Empty;
    }

    private async Task SaveEdit(int subjectId)
    {
        if (string.IsNullOrWhiteSpace(editSubjectName))
        {
            return;
        }

        try
        {
            var request = new UpdateSubjectRequest
            {
                Id = subjectId,
                Name = editSubjectName.Trim()
            };

            // Замена: Http.PutAsJsonAsync -> ApiService.PutAsJsonAsync
            var response = await ApiService.PutAsJsonAsync("api/Subject", request);

            if (response.IsSuccessStatusCode)
            {
                isEditing = null;
                editSubjectName = string.Empty;
                await LoadSubjects();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка редактирования дисциплины: {ex.Message}");
        }
    }

    private void ShowDeleteModal(GetSubjectResponse subject)
    {
        subjectToDelete = subject;
        showDeleteModal = true;
    }

    private void CloseDeleteModal()
    {
        showDeleteModal = false;
        subjectToDelete = null;
    }

    private async Task DeleteSubject()
    {
        if (subjectToDelete == null) return;

        isDeleting = true;
        StateHasChanged();

        try
        {
            // Замена: Http.DeleteAsync -> ApiService.DeleteAsync
            var response = await ApiService.DeleteAsync($"api/Subject/{subjectToDelete.Id}");

            if (response.IsSuccessStatusCode)
            {
                showDeleteModal = false;
                subjectToDelete = null;
                await LoadSubjects();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка удаления дисциплины: {ex.Message}");
        }
        finally
        {
            isDeleting = false;
            StateHasChanged();
        }
    }
}