@page "/tasks"
@using BlazorClient.Services.Contracts.AcademicYear
@using BlazorClient.Services.Contracts.Subject
@using BlazorClient.Services.Contracts.TaskType
@using BlazorClient.Services.Contracts.Author
@using BlazorClient.Services.Contracts.Tag
@using BlazorClient.Services.Contracts.Task
@inject ApiService ApiService
@inject NavigationManager Navigation

<PageTitle>Поиск заданий - Архив</PageTitle>

<div class="container-fluid">
    <div class="row">
        <!-- Основной контент -->
        <div class="col-md-9">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-primary">
                    <i class="bi bi-journal-text me-2"></i>Поиск заданий
                </h2>
                <div class="text-muted">
                    @if (searched)
                    {
                        <span class="badge bg-info fs-6">Найдено: @tasks.Count</span>
                    }
                </div>
            </div>

            @if (isLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                        <span class="visually-hidden">Загрузка...</span>
                    </div>
                    <p class="mt-3 text-muted">Ищем задания по вашему запросу...</p>
                </div>
            }
            else if (tasks?.Any() == true)
            {
                <div class="row g-4">
                    @foreach (var task in tasks)
                    {
                        <div class="col-lg-6 col-xl-4">
                            <div class="card task-card h-100 shadow-sm" @onclick="() => NavigateToTask(task.Id)" style="cursor: pointer;">
                                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                                    <span class="badge bg-primary">@task.Type?.Name</span>
                                    <small class="text-muted">@task.DateAdded.ToString("dd.MM.yyyy")</small>
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title text-truncate" title="@task.Title">@task.Title</h5>

                                    <div class="mb-2">
                                        <span class="fw-semibold text-muted">Дисциплина:</span>
                                        <span class="ms-1">@task.Subject?.Name</span>
                                    </div>

                                    @if (!string.IsNullOrEmpty(task.ConditionText))
                                    {
                                        <div class="mb-2">
                                            <span class="fw-semibold text-muted">Условие:</span>
                                            <p class="card-text task-condition">@GetShortCondition(task.ConditionText)</p>
                                        </div>
                                    }

                                    @if (task.Authors?.Any() == true)
                                    {
                                        <div class="mb-2">
                                            <span class="fw-semibold text-muted">Авторы:</span>
                                            <div class="mt-1">
                                                @foreach (var author in task.Authors.Take(2))
                                                {
                                                    <span class="badge bg-secondary me-1 mb-1">@author.Name</span>
                                                }
                                                @if (task.Authors.Count > 2)
                                                {
                                                    <span class="badge bg-light text-dark">+@(task.Authors.Count - 2)</span>
                                                }
                                            </div>
                                        </div>
                                    }

                                    @if (task.Tags?.Any() == true)
                                    {
                                        <div class="mb-3">
                                            <span class="fw-semibold text-muted">Тэги:</span>
                                            <div class="mt-1">
                                                @foreach (var tag in task.Tags.Take(3))
                                                {
                                                    <span class="badge bg-success me-1 mb-1">@tag.Name</span>
                                                }
                                                @if (task.Tags.Count > 3)
                                                {
                                                    <span class="badge bg-light text-dark">+@(task.Tags.Count - 3)</span>
                                                }
                                            </div>
                                        </div>
                                    }
                                </div>
                                <div class="card-footer bg-transparent">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">
                                            <i class="bi bi-eye me-1"></i>Подробнее
                                        </small>
                                        <i class="bi bi-arrow-right text-primary"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else if (searched)
            {
                <div class="text-center py-5">
                    <i class="bi bi-search display-1 text-muted mb-3"></i>
                    <h4 class="text-muted">Задания не найдены</h4>
                    <p class="text-muted">Попробуйте изменить параметры поиска</p>
                    <button @onclick="ClearFilters" class="btn btn-primary">
                        <i class="bi bi-arrow-clockwise me-2"></i>Сбросить фильтры
                    </button>
                </div>
            }
            else
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-journal-text display-1 mb-3"></i>
                    <h4>Выберите параметры поиска</h4>
                    <p>Используйте фильтры справа для поиска заданий</p>
                </div>
            }
        </div>

        <!-- Боковая панель фильтров (справа) -->
        <div class="col-md-3">
            <div class="card shadow-sm sticky-top" style="top: 20px;">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-funnel me-2"></i>Фильтры поиска
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Дисциплина:</label>
                        <select @bind="selectedSubjectId" class="form-select">
                            <option value="">Все дисциплины</option>
                            @foreach (var subject in subjects)
                            {
                                <option value="@subject.Id">@subject.Name</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Учебный год:</label>
                        <select @bind="selectedAcademicYearId" class="form-select">
                            <option value="">Все годы</option>
                            @foreach (var year in academicYears)
                            {
                                <option value="@year.Id">@year.YearLabel</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Тип задания:</label>
                        <select @bind="selectedTypeId" class="form-select">
                            <option value="">Все типы</option>
                            @foreach (var type in taskTypes)
                            {
                                <option value="@type.Id">@type.Name</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Авторы:</label>
                        <select @bind="selectedAuthorIds" multiple class="form-select" size="4">
                            @foreach (var author in authors)
                            {
                                <option value="@author.Id">@author.Name</option>
                            }
                        </select>
                        <small class="text-muted">Ctrl+Click для выбора нескольких</small>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-semibold">Тэги:</label>
                        <select @bind="selectedTagIds" multiple class="form-select" size="4">
                            @foreach (var tag in tags)
                            {
                                <option value="@tag.Id">@tag.Name</option>
                            }
                        </select>
                    </div>

                    <div class="d-grid gap-2">
                        <button @onclick="SearchTasks" class="btn btn-primary" disabled="@isLoading">
                            @if (isLoading)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                            }
                            <i class="bi bi-search me-2"></i>Найти задания
                        </button>
                        <button @onclick="ClearFilters" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-clockwise me-2"></i>Очистить фильтры
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .task-card {
        transition: all 0.3s ease;
        border: 1px solid #e9ecef;
    }

        .task-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            border-color: #007bff;
        }

    .task-condition {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        line-height: 1.4;
        max-height: 4.2em;
    }

    .form-select[multiple] {
        min-height: 120px;
    }

    .badge {
        font-size: 0.75em;
    }

    .card-title {
        color: #2c3e50;
        font-weight: 600;
    }

    .sticky-top {
        z-index: 1020;
    }

    @@media (max-width: 768px) {
        .task-card {
            margin-bottom: 1rem;
        }

        .col-md-3 {
            margin-bottom: 2rem;
        }

        .sticky-top {
            position: relative !important;
            top: 0 !important;
        }
    }
</style>

@code {
    private List<GetTaskResponse> tasks = new();
    private List<GetSubjectResponse> subjects = new();
    private List<GetAcademicYearResponse> academicYears = new();
    private List<GetTaskTypeResponse> taskTypes = new();
    private List<GetAuthorResponse> authors = new();
    private List<GetTagResponse> tags = new();

    private int? selectedSubjectId;
    private int? selectedAcademicYearId;
    private int? selectedTypeId;
    private int[] selectedAuthorIds = Array.Empty<int>();
    private int[] selectedTagIds = Array.Empty<int>();
    private bool isLoading = false;
    private bool searched = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadFilterData();
    }

    private async Task LoadFilterData()
    {
        try
        {
            subjects = await ApiService.GetListFromJsonAsync<GetSubjectResponse>("api/Subject");
            academicYears = await ApiService.GetListFromJsonAsync<GetAcademicYearResponse>("api/AcademicYear");
            taskTypes = await ApiService.GetListFromJsonAsync<GetTaskTypeResponse>("api/TaskType");
            authors = await ApiService.GetListFromJsonAsync<GetAuthorResponse>("api/Author");
            tags = await ApiService.GetListFromJsonAsync<GetTagResponse>("api/Tag");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка загрузки данных фильтров: {ex.Message}");
        }
    }

    private async Task SearchTasks()
    {
        isLoading = true;
        searched = true;
        StateHasChanged();

        try
        {
            tasks = await ApiService.GetTasksByFilter(
                selectedSubjectId,
                selectedAcademicYearId,
                selectedTypeId,
                selectedAuthorIds,
                selectedTagIds
            );
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка поиска заданий: {ex.Message}");
            tasks = new();
        }

        isLoading = false;
        StateHasChanged();
    }

    private void ClearFilters()
    {
        selectedSubjectId = null;
        selectedAcademicYearId = null;
        selectedTypeId = null;
        selectedAuthorIds = Array.Empty<int>();
        selectedTagIds = Array.Empty<int>();
        tasks = new();
        searched = false;
    }

    private void NavigateToTask(int taskId)
    {
        Navigation.NavigateTo($"/task/{taskId}");
    }

    private string GetShortCondition(string condition)
    {
        if (string.IsNullOrEmpty(condition)) return string.Empty;
        return condition.Length > 150 ? condition.Substring(0, 150) + "..." : condition;
    }
}