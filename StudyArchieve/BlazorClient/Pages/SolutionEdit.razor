@page "/solution/edit/{SolutionId:int}"
@using BlazorClient.Services.Contracts.Solution
@using BlazorClient.Services.Contracts.SolutionFile
@using BlazorClient.Services.Contracts.Task
@using Microsoft.AspNetCore.Components.Forms
@inject ApiService ApiService
@inject FileUploadService FileUploadService
@inject FileDownloadService FileDownloadService
@inject NavigationManager Navigation
@inject ILogger<SolutionEdit> Logger

<PageTitle>Редактирование решения - Архив</PageTitle>

@if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Загрузка...</span>
        </div>
        <p class="mt-3 text-muted">Загрузка решения...</p>
    </div>
}
else if (solution == null || task == null)
{
    <div class="text-center py-5">
        <i class="bi bi-exclamation-triangle display-1 text-warning mb-3"></i>
        <h4 class="text-warning">Решение не найдено</h4>
        <p class="text-muted">Запрошенное решение не существует или было удалено</p>
        <a href="/tasks" class="btn btn-primary">
            <i class="bi bi-arrow-left me-2"></i>Вернуться к поиску
        </a>
    </div>
}
else
{
    <div class="container">
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Главная</a></li>
                <li class="breadcrumb-item"><a href="/tasks">Поиск заданий</a></li>
                <li class="breadcrumb-item"><a href="/task/@task.Id">@task.Title</a></li>
                <li class="breadcrumb-item active">Редактирование решения</li>
            </ol>
        </nav>

        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-warning text-dark">
                        <h4 class="mb-0">
                            <i class="bi bi-pencil-square me-2"></i>
                            Редактирование решения
                        </h4>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Текст решения:</label>
                            <textarea @bind="editSolutionText" class="form-control" rows="8"
                                      placeholder="Введите текст решения..."></textarea>
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <button class="btn btn-success" @onclick="SaveSolution" disabled="@isSaving">
                                @if (isSaving)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                }
                                Сохранить изменения
                            </button>
                            <button class="btn btn-secondary" @onclick="CancelEdit">
                                Отмена
                            </button>
                            <button class="btn btn-danger ms-auto" @onclick="ShowDeleteModal">
                                <i class="bi bi-trash me-1"></i>Удалить решение
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Файлы решения -->
                <div class="card shadow-sm">
                    <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bi bi-files me-2"></i>Файлы решения
                        </h5>
                        <button class="btn btn-sm btn-light" @onclick="ShowUploadFileModal">
                            <i class="bi bi-plus-lg me-1"></i>Добавить файл
                        </button>
                    </div>
                    <div class="card-body">
                        @if (solutionFiles.Any())
                        {
                            <div class="list-group">
                                @foreach (var file in solutionFiles)
                                {
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <i class="bi bi-file-earmark me-2"></i>
                                            <span>@file.FileName</span>
                                            <small class="text-muted ms-2">(@FormatFileSize(file.FileSize))</small>
                                        </div>
                                        <div>
                                            <button class="btn btn-sm btn-outline-primary me-1"
                                                    @onclick="() => DownloadSolutionFile(file.Id, file.FileName)"
                                                    title="Скачать файл"
                                                    disabled="@(isDownloading && currentDownloadingFileId == file.Id)">
                                                @if (isDownloading && currentDownloadingFileId == file.Id)
                                                {
                                                    <span class="spinner-border spinner-border-sm"></span>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-download"></i>
                                                }
                                            </button>
                                            <button class="btn btn-sm btn-outline-danger"
                                                    @onclick="() => DeleteSolutionFile(file.Id)"
                                                    title="Удалить файл">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted text-center mb-0">Файлы решения отсутствуют</p>
                        }
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <!-- Информация о задании -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h6 class="mb-0"><i class="bi bi-journal-text me-2"></i>Задание</h6>
                    </div>
                    <div class="card-body">
                        <h6>@task.Title</h6>
                        <div class="small text-muted mb-2">
                            <div>@task.Subject?.Name</div>
                            <div>@task.Type?.Name</div>
                            @if (task.AcademicYear != null)
                            {
                                <div>@task.AcademicYear.YearLabel</div>
                            }
                        </div>

                        @if (!string.IsNullOrEmpty(task.ConditionText))
                        {
                            <div class="mt-3">
                                <strong>Условие:</strong>
                                <p class="small mt-1">@GetShortCondition(task.ConditionText)</p>
                            </div>
                        }

                        <a href="/task/@task.Id" class="btn btn-outline-primary btn-sm w-100 mt-3">
                            <i class="bi bi-arrow-left me-1"></i>Вернуться к заданию
                        </a>
                    </div>
                </div>

                <!-- Информация о решении -->
                <div class="card shadow-sm">
                    <div class="card-header bg-secondary text-white">
                        <h6 class="mb-0"><i class="bi bi-info-circle me-2"></i>Информация о решении</h6>
                    </div>
                    <div class="card-body">
                        <div class="small">
                            <div class="mb-2">
                                <strong>Дата добавления:</strong><br>
                                @solution.DateAdded.ToString("dd.MM.yyyy HH:mm")
                            </div>
                            @if (solution.UserAdded != null)
                            {
                                <div>
                                    <strong>Добавил:</strong><br>
                                    @solution.UserAdded.Username
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Модальное окно загрузки файла -->
@if (showUploadFileModal)
{
    <div class="modal show d-block" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Добавить файл к решению</h5>
                    <button type="button" class="btn-close" @onclick="CloseUploadFileModal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Выберите файл:</label>
                        <InputFile OnChange="HandleSolutionFileSelected" class="form-control"
                                   accept=".pdf,.doc,.docx,.txt,.jpg,.jpeg,.png,.zip,.rar,.7z" />
                        @if (selectedSolutionFile != null)
                        {
                            <div class="mt-2">
                                <small class="text-muted">Выбранный файл: @selectedSolutionFile.Name</small>
                                <br>
                                <small class="text-muted">Размер: @FormatFileSize(selectedSolutionFile.Size)</small>
                            </div>
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseUploadFileModal">Отмена</button>
                    <button type="button" class="btn btn-primary" @onclick="UploadSolutionFile" disabled="@isUploadingFile">
                        @if (isUploadingFile)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        Загрузить
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Модальное окно удаления решения -->
@if (showDeleteModal)
{
    <div class="modal show d-block" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Подтверждение удаления</h5>
                    <button type="button" class="btn-close" @onclick="CloseDeleteModal"></button>
                </div>
                <div class="modal-body">
                    <p>Вы уверены, что хотите удалить это решение?</p>
                    <p class="text-danger small">
                        <i class="bi bi-exclamation-triangle me-1"></i>
                        Это действие нельзя отменить. Будут удалены все связанные файлы.
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseDeleteModal">Отмена</button>
                    <button type="button" class="btn btn-danger" @onclick="DeleteSolution" disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        Удалить
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public int SolutionId { get; set; }

    private GetSolutionResponse? solution;
    private GetTaskResponse? task;
    private List<SolutionFileResponse> solutionFiles = new();

    private bool isLoading = true;
    private bool isSaving = false;
    private bool isDeleting = false;
    private bool isUploadingFile = false;
    private bool isDownloading = false;
    private int? currentDownloadingFileId = null;
    private bool showUploadFileModal = false;
    private bool showDeleteModal = false;

    private string editSolutionText = string.Empty;
    private IBrowserFile? selectedSolutionFile;

    protected override async Task OnParametersSetAsync()
    {
        if (SolutionId > 0)
        {
            await LoadSolution();
        }
    }

    private async Task LoadSolution()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            // Загружаем решение
            solution = await ApiService.GetFromJsonAsync<GetSolutionResponse>($"api/Solution/{SolutionId}");

            if (solution != null)
            {
                editSolutionText = solution.SolutionText;

                // Загружаем задание
                task = await ApiService.GetFromJsonAsync<GetTaskResponse>($"api/Task/{solution.TaskId}");

                // Загружаем файлы решения
                solutionFiles = await ApiService.GetListFromJsonAsync<SolutionFileResponse>($"api/SolutionFile/solution/{SolutionId}");
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Ошибка загрузки решения {SolutionId}", SolutionId);
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task SaveSolution()
    {
        if (string.IsNullOrWhiteSpace(editSolutionText))
        {
            // TODO: Показать сообщение об ошибке
            return;
        }

        isSaving = true;
        StateHasChanged();

        try
        {
            var updateRequest = new UpdateSolutionRequest
            {
                Id = SolutionId,
                SolutionText = editSolutionText
            };

            var response = await ApiService.PutAsJsonAsync("api/Solution", updateRequest);
            if (response.IsSuccessStatusCode)
            {
                // Возвращаемся к заданию
                if (task != null)
                {
                    Navigation.NavigateTo($"/task/{task.Id}");
                }
                else
                {
                    Navigation.NavigateTo("/tasks");
                }
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Ошибка сохранения решения {SolutionId}", SolutionId);
        }
        finally
        {
            isSaving = false;
            StateHasChanged();
        }
    }

    private void CancelEdit()
    {
        if (task != null)
        {
            Navigation.NavigateTo($"/task/{task.Id}");
        }
        else
        {
            Navigation.NavigateTo("/tasks");
        }
    }

    private void ShowDeleteModal()
    {
        showDeleteModal = true;
    }

    private void CloseDeleteModal()
    {
        showDeleteModal = false;
    }

    private async Task DeleteSolution()
    {
        isDeleting = true;
        StateHasChanged();

        try
        {
            var response = await ApiService.DeleteAsync($"api/Solution/{SolutionId}");
            if (response.IsSuccessStatusCode)
            {
                // Возвращаемся к заданию после удаления
                if (task != null)
                {
                    Navigation.NavigateTo($"/task/{task.Id}");
                }
                else
                {
                    Navigation.NavigateTo("/tasks");
                }
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Ошибка удаления решения {SolutionId}", SolutionId);
        }
        finally
        {
            isDeleting = false;
            StateHasChanged();
        }
    }

    private void ShowUploadFileModal()
    {
        showUploadFileModal = true;
        selectedSolutionFile = null;
    }

    private void CloseUploadFileModal()
    {
        showUploadFileModal = false;
        selectedSolutionFile = null;
    }

    private void HandleSolutionFileSelected(InputFileChangeEventArgs e)
    {
        selectedSolutionFile = e.File;
    }

    private async Task UploadSolutionFile()
    {
        if (selectedSolutionFile == null) return;

        isUploadingFile = true;
        StateHasChanged();

        try
        {
            var success = await FileUploadService.UploadSolutionFileAsync(SolutionId, selectedSolutionFile);
            if (success)
            {
                showUploadFileModal = false;
                selectedSolutionFile = null;
                await LoadSolution(); // Перезагружаем список файлов
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Ошибка загрузки файла для решения {SolutionId}", SolutionId);
        }
        finally
        {
            isUploadingFile = false;
            StateHasChanged();
        }
    }

    private async Task DownloadSolutionFile(int fileId, string fileName)
    {
        isDownloading = true;
        currentDownloadingFileId = fileId;
        StateHasChanged();

        try
        {
            await FileDownloadService.DownloadSolutionFileAsync(fileId, fileName);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Ошибка скачивания файла решения {FileId}", fileId);
        }
        finally
        {
            isDownloading = false;
            currentDownloadingFileId = null;
            StateHasChanged();
        }
    }

    private async Task DeleteSolutionFile(int fileId)
    {
        try
        {
            var success = await FileUploadService.DeleteSolutionFileAsync(fileId);
            if (success)
            {
                await LoadSolution(); // Перезагружаем список файлов
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Ошибка удаления файла решения {FileId}", fileId);
        }
    }

    private string GetShortCondition(string condition)
    {
        if (condition.Length <= 100) return condition;
        return condition.Substring(0, 100) + "...";
    }

    private string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB" };
        int order = 0;
        double len = bytes;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len /= 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }
}