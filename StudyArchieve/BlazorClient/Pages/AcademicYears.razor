@page "/admin/academic-years"
@using BlazorClient.Services.Contracts.AcademicYear
@inject ApiService ApiService

<PageTitle>Управление учебными годами</PageTitle>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-calendar3 me-2"></i>Управление учебными годами</h2>
        <button class="btn btn-primary" @onclick="ShowAddModal">
            <i class="bi bi-plus-circle me-2"></i>Добавить учебный год
        </button>
    </div>

    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Загрузка...</span>
            </div>
            <p class="mt-2">Загрузка данных...</p>
        </div>
    }
    else if (academicYears?.Any() == true)
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Учебный год</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var year in academicYears)
                            {
                                <tr>
                                    <td>@year.Id</td>
                                    <td>
                                        @if (isEditing == year.Id)
                                        {
                                            <input @bind="editYearLabel" class="form-control form-control-sm" />
                                        }
                                        else
                                        {
                                            @year.YearLabel
                                        }
                                    </td>
                                    <td>
                                        @if (isEditing == year.Id)
                                        {
                                            <button class="btn btn-success btn-sm me-2" @onclick="() => SaveEdit(year.Id)">
                                                <i class="bi bi-check"></i>
                                            </button>
                                            <button class="btn btn-secondary btn-sm" @onclick="CancelEdit">
                                                <i class="bi bi-x"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-warning btn-sm me-2" @onclick="() => StartEdit(year)">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button class="btn btn-danger btn-sm" @onclick="() => ShowDeleteModal(year)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>Учебные годы не найдены
        </div>
    }
</div>

<!-- Модальное окно добавления -->
@if (showAddModal)
{
    <div class="modal show d-block" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Добавить учебный год</h5>
                    <button type="button" class="btn-close" @onclick="CloseAddModal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Название учебного года:</label>
                        <input @bind="newYearLabel" class="form-control" placeholder="Например: 2024-2025" />
                        @if (!string.IsNullOrEmpty(validationError))
                        {
                            <div class="text-danger small mt-1">@validationError</div>
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseAddModal">Отмена</button>
                    <button type="button" class="btn btn-primary" @onclick="AddAcademicYear" disabled="@isSaving">
                        @if (isSaving)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                        }
                        Добавить
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Модальное окно удаления -->
@if (showDeleteModal && yearToDelete != null)
{
    <div class="modal show d-block" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Подтверждение удаления</h5>
                    <button type="button" class="btn-close" @onclick="CloseDeleteModal"></button>
                </div>
                <div class="modal-body">
                    <p>Вы уверены, что хотите удалить учебный год <strong>"@yearToDelete.YearLabel"</strong>?</p>
                    <p class="text-danger"><small>Это действие нельзя отменить.</small></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseDeleteModal">Отмена</button>
                    <button type="button" class="btn btn-danger" @onclick="DeleteAcademicYear" disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                        }
                        Удалить
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<GetAcademicYearResponse> academicYears = new();
    private bool isLoading = true;
    private bool showAddModal = false;
    private bool showDeleteModal = false;
    private bool isSaving = false;
    private bool isDeleting = false;
    private string newYearLabel = string.Empty;
    private string validationError = string.Empty;
    private GetAcademicYearResponse? yearToDelete = null;
    private int? isEditing = null;
    private string editYearLabel = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadAcademicYears();
    }

    private async Task LoadAcademicYears()
    {
        try
        {
            isLoading = true;
            StateHasChanged();

            // Замена: Http.GetFromJsonAsync -> ApiService.GetFromJsonAsync
            academicYears = await ApiService.GetFromJsonAsync<List<GetAcademicYearResponse>>("api/AcademicYear") ?? new();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка загрузки учебных лет: {ex.Message}");
            academicYears = new();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void ShowAddModal()
    {
        showAddModal = true;
        newYearLabel = string.Empty;
        validationError = string.Empty;
    }

    private void CloseAddModal()
    {
        showAddModal = false;
        validationError = string.Empty;
    }

    private async Task AddAcademicYear()
    {
        if (string.IsNullOrWhiteSpace(newYearLabel))
        {
            validationError = "Поле не может быть пустым";
            return;
        }

        isSaving = true;
        StateHasChanged();

        try
        {
            var request = new CreateAcademicYearRequest { YearLabel = newYearLabel.Trim() };

            // Замена: Http.PostAsJsonAsync -> ApiService.PostAsJsonAsync
            var response = await ApiService.PostAsJsonAsync("api/AcademicYear", request);

            if (response.IsSuccessStatusCode)
            {
                showAddModal = false;
                newYearLabel = string.Empty;
                await LoadAcademicYears();
            }
            else
            {
                validationError = "Ошибка при добавлении учебного года";
            }
        }
        catch (Exception ex)
        {
            validationError = "Ошибка соединения с сервером";
            Console.WriteLine($"Ошибка добавления учебного года: {ex.Message}");
        }
        finally
        {
            isSaving = false;
            StateHasChanged();
        }
    }

    private void StartEdit(GetAcademicYearResponse year)
    {
        isEditing = year.Id;
        editYearLabel = year.YearLabel;
    }

    private void CancelEdit()
    {
        isEditing = null;
        editYearLabel = string.Empty;
    }

    private async Task SaveEdit(int yearId)
    {
        if (string.IsNullOrWhiteSpace(editYearLabel))
        {
            return;
        }

        try
        {
            var request = new UpdateAcademicYearRequest
            {
                Id = yearId,
                YearLabel = editYearLabel.Trim()
            };

            // Замена: Http.PutAsJsonAsync -> ApiService.PutAsJsonAsync
            var response = await ApiService.PutAsJsonAsync("api/AcademicYear", request);

            if (response.IsSuccessStatusCode)
            {
                isEditing = null;
                editYearLabel = string.Empty;
                await LoadAcademicYears();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка редактирования учебного года: {ex.Message}");
        }
    }

    private void ShowDeleteModal(GetAcademicYearResponse year)
    {
        yearToDelete = year;
        showDeleteModal = true;
    }

    private void CloseDeleteModal()
    {
        showDeleteModal = false;
        yearToDelete = null;
    }

    private async Task DeleteAcademicYear()
    {
        if (yearToDelete == null) return;

        isDeleting = true;
        StateHasChanged();

        try
        {
            // Замена: Http.DeleteAsync -> ApiService.DeleteAsync
            var response = await ApiService.DeleteAsync($"api/AcademicYear/{yearToDelete.Id}");

            if (response.IsSuccessStatusCode)
            {
                showDeleteModal = false;
                yearToDelete = null;
                await LoadAcademicYears();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка удаления учебного года: {ex.Message}");
        }
        finally
        {
            isDeleting = false;
            StateHasChanged();
        }
    }
}