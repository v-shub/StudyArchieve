@page "/admin/tags"
@using BlazorClient.Services.Contracts.Tag
@inject ApiService ApiService

<PageTitle>Управление тегами</PageTitle>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-tags me-2"></i>Управление тегами</h2>
        <button class="btn btn-primary" @onclick="ShowAddModal">
            <i class="bi bi-plus-circle me-2"></i>Добавить тег
        </button>
    </div>

    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Загрузка...</span>
            </div>
            <p class="mt-2">Загрузка данных...</p>
        </div>
    }
    else if (tags?.Any() == true)
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Название тега</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var tag in tags)
                            {
                                <tr>
                                    <td>@tag.Id</td>
                                    <td>
                                        @if (isEditing == tag.Id)
                                        {
                                            <input @bind="editTagName" class="form-control form-control-sm" />
                                        }
                                        else
                                        {
                                            @tag.Name
                                        }
                                    </td>
                                    <td>
                                        @if (isEditing == tag.Id)
                                        {
                                            <button class="btn btn-success btn-sm me-2" @onclick="() => SaveEdit(tag.Id)">
                                                <i class="bi bi-check"></i>
                                            </button>
                                            <button class="btn btn-secondary btn-sm" @onclick="CancelEdit">
                                                <i class="bi bi-x"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-warning btn-sm me-2" @onclick="() => StartEdit(tag)">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button class="btn btn-danger btn-sm" @onclick="() => ShowDeleteModal(tag)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>Теги не найдены
        </div>
    }
</div>

<!-- Модальное окно добавления -->
@if (showAddModal)
{
    <div class="modal show d-block" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Добавить тег</h5>
                    <button type="button" class="btn-close" @onclick="CloseAddModal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Название тега:</label>
                        <input @bind="newTagName" class="form-control" placeholder="Введите название тега" />
                        @if (!string.IsNullOrEmpty(validationError))
                        {
                            <div class="text-danger small mt-1">@validationError</div>
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseAddModal">Отмена</button>
                    <button type="button" class="btn btn-primary" @onclick="AddTag" disabled="@isSaving">
                        @if (isSaving)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                        }
                        Добавить
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Модальное окно удаления -->
@if (showDeleteModal && tagToDelete != null)
{
    <div class="modal show d-block" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Подтверждение удаления</h5>
                    <button type="button" class="btn-close" @onclick="CloseDeleteModal"></button>
                </div>
                <div class="modal-body">
                    <p>Вы уверены, что хотите удалить тег <strong>"@tagToDelete.Name"</strong>?</p>
                    <p class="text-danger"><small>Это действие нельзя отменить.</small></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseDeleteModal">Отмена</button>
                    <button type="button" class="btn btn-danger" @onclick="DeleteTag" disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                        }
                        Удалить
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<GetTagResponse> tags = new();
    private bool isLoading = true;
    private bool showAddModal = false;
    private bool showDeleteModal = false;
    private bool isSaving = false;
    private bool isDeleting = false;
    private string newTagName = string.Empty;
    private string validationError = string.Empty;
    private GetTagResponse? tagToDelete = null;
    private int? isEditing = null;
    private string editTagName = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadTags();
    }

    private async Task LoadTags()
    {
        try
        {
            isLoading = true;
            StateHasChanged();

            // Замена: Http.GetFromJsonAsync -> ApiService.GetFromJsonAsync
            tags = await ApiService.GetFromJsonAsync<List<GetTagResponse>>("api/Tag") ?? new();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка загрузки тегов: {ex.Message}");
            tags = new();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void ShowAddModal()
    {
        showAddModal = true;
        newTagName = string.Empty;
        validationError = string.Empty;
    }

    private void CloseAddModal()
    {
        showAddModal = false;
        validationError = string.Empty;
    }

    private async Task AddTag()
    {
        if (string.IsNullOrWhiteSpace(newTagName))
        {
            validationError = "Поле не может быть пустым";
            return;
        }

        isSaving = true;
        StateHasChanged();

        try
        {
            var request = new CreateTagRequest { Name = newTagName.Trim() };

            // Замена: Http.PostAsJsonAsync -> ApiService.PostAsJsonAsync
            var response = await ApiService.PostAsJsonAsync("api/Tag", request);

            if (response.IsSuccessStatusCode)
            {
                showAddModal = false;
                newTagName = string.Empty;
                await LoadTags();
            }
            else
            {
                validationError = "Ошибка при добавлении тега";
            }
        }
        catch (Exception ex)
        {
            validationError = "Ошибка соединения с сервером";
            Console.WriteLine($"Ошибка добавления тега: {ex.Message}");
        }
        finally
        {
            isSaving = false;
            StateHasChanged();
        }
    }

    private void StartEdit(GetTagResponse tag)
    {
        isEditing = tag.Id;
        editTagName = tag.Name;
    }

    private void CancelEdit()
    {
        isEditing = null;
        editTagName = string.Empty;
    }

    private async Task SaveEdit(int tagId)
    {
        if (string.IsNullOrWhiteSpace(editTagName))
        {
            return;
        }

        try
        {
            var request = new UpdateTagRequest
            {
                Id = tagId,
                Name = editTagName.Trim()
            };

            // Замена: Http.PutAsJsonAsync -> ApiService.PutAsJsonAsync
            var response = await ApiService.PutAsJsonAsync("api/Tag", request);

            if (response.IsSuccessStatusCode)
            {
                isEditing = null;
                editTagName = string.Empty;
                await LoadTags();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка редактирования тега: {ex.Message}");
        }
    }

    private void ShowDeleteModal(GetTagResponse tag)
    {
        tagToDelete = tag;
        showDeleteModal = true;
    }

    private void CloseDeleteModal()
    {
        showDeleteModal = false;
        tagToDelete = null;
    }

    private async Task DeleteTag()
    {
        if (tagToDelete == null) return;

        isDeleting = true;
        StateHasChanged();

        try
        {
            // Замена: Http.DeleteAsync -> ApiService.DeleteAsync
            var response = await ApiService.DeleteAsync($"api/Tag/{tagToDelete.Id}");

            if (response.IsSuccessStatusCode)
            {
                showDeleteModal = false;
                tagToDelete = null;
                await LoadTags();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка удаления тега: {ex.Message}");
        }
        finally
        {
            isDeleting = false;
            StateHasChanged();
        }
    }
}