@page "/admin/task-types"
@using BlazorClient.Services.Contracts.TaskType
@inject ApiService ApiService

<PageTitle>Управление типами заданий</PageTitle>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-list-task me-2"></i>Управление типами заданий</h2>
        <button class="btn btn-primary" @onclick="ShowAddModal">
            <i class="bi bi-plus-circle me-2"></i>Добавить тип задания
        </button>
    </div>

    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Загрузка...</span>
            </div>
            <p class="mt-2">Загрузка данных...</p>
        </div>
    }
    else if (taskTypes?.Any() == true)
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Название типа</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var taskType in taskTypes)
                            {
                                <tr>
                                    <td>@taskType.Id</td>
                                    <td>
                                        @if (isEditing == taskType.Id)
                                        {
                                            <input @bind="editTaskTypeName" class="form-control form-control-sm" />
                                        }
                                        else
                                        {
                                            @taskType.Name
                                        }
                                    </td>
                                    <td>
                                        @if (isEditing == taskType.Id)
                                        {
                                            <button class="btn btn-success btn-sm me-2" @onclick="() => SaveEdit(taskType.Id)">
                                                <i class="bi bi-check"></i>
                                            </button>
                                            <button class="btn btn-secondary btn-sm" @onclick="CancelEdit">
                                                <i class="bi bi-x"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-warning btn-sm me-2" @onclick="() => StartEdit(taskType)">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button class="btn btn-danger btn-sm" @onclick="() => ShowDeleteModal(taskType)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>Типы заданий не найдены
        </div>
    }
</div>

<!-- Модальное окно добавления -->
@if (showAddModal)
{
    <div class="modal show d-block" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Добавить тип задания</h5>
                    <button type="button" class="btn-close" @onclick="CloseAddModal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Название типа:</label>
                        <input @bind="newTaskTypeName" class="form-control" placeholder="Введите название типа задания" />
                        @if (!string.IsNullOrEmpty(validationError))
                        {
                            <div class="text-danger small mt-1">@validationError</div>
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseAddModal">Отмена</button>
                    <button type="button" class="btn btn-primary" @onclick="AddTaskType" disabled="@isSaving">
                        @if (isSaving)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                        }
                        Добавить
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Модальное окно удаления -->
@if (showDeleteModal && taskTypeToDelete != null)
{
    <div class="modal show d-block" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Подтверждение удаления</h5>
                    <button type="button" class="btn-close" @onclick="CloseDeleteModal"></button>
                </div>
                <div class="modal-body">
                    <p>Вы уверены, что хотите удалить тип задания <strong>"@taskTypeToDelete.Name"</strong>?</p>
                    <p class="text-danger"><small>Это действие нельзя отменить.</small></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseDeleteModal">Отмена</button>
                    <button type="button" class="btn btn-danger" @onclick="DeleteTaskType" disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                        }
                        Удалить
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<GetTaskTypeResponse> taskTypes = new();
    private bool isLoading = true;
    private bool showAddModal = false;
    private bool showDeleteModal = false;
    private bool isSaving = false;
    private bool isDeleting = false;
    private string newTaskTypeName = string.Empty;
    private string validationError = string.Empty;
    private GetTaskTypeResponse? taskTypeToDelete = null;
    private int? isEditing = null;
    private string editTaskTypeName = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadTaskTypes();
    }

    private async Task LoadTaskTypes()
    {
        try
        {
            isLoading = true;
            StateHasChanged();

            // Замена: Http.GetFromJsonAsync -> ApiService.GetFromJsonAsync
            taskTypes = await ApiService.GetFromJsonAsync<List<GetTaskTypeResponse>>("api/TaskType") ?? new();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка загрузки типов заданий: {ex.Message}");
            taskTypes = new();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void ShowAddModal()
    {
        showAddModal = true;
        newTaskTypeName = string.Empty;
        validationError = string.Empty;
    }

    private void CloseAddModal()
    {
        showAddModal = false;
        validationError = string.Empty;
    }

    private async Task AddTaskType()
    {
        if (string.IsNullOrWhiteSpace(newTaskTypeName))
        {
            validationError = "Поле не может быть пустым";
            return;
        }

        isSaving = true;
        StateHasChanged();

        try
        {
            var request = new CreateTaskTypeRequest { Name = newTaskTypeName.Trim() };

            // Замена: Http.PostAsJsonAsync -> ApiService.PostAsJsonAsync
            var response = await ApiService.PostAsJsonAsync("api/TaskType", request);

            if (response.IsSuccessStatusCode)
            {
                showAddModal = false;
                newTaskTypeName = string.Empty;
                await LoadTaskTypes();
            }
            else
            {
                validationError = "Ошибка при добавлении типа задания";
            }
        }
        catch (Exception ex)
        {
            validationError = "Ошибка соединения с сервером";
            Console.WriteLine($"Ошибка добавления типа задания: {ex.Message}");
        }
        finally
        {
            isSaving = false;
            StateHasChanged();
        }
    }

    private void StartEdit(GetTaskTypeResponse taskType)
    {
        isEditing = taskType.Id;
        editTaskTypeName = taskType.Name;
    }

    private void CancelEdit()
    {
        isEditing = null;
        editTaskTypeName = string.Empty;
    }

    private async Task SaveEdit(int taskTypeId)
    {
        if (string.IsNullOrWhiteSpace(editTaskTypeName))
        {
            return;
        }

        try
        {
            var request = new UpdateTaskTypeRequest
            {
                Id = taskTypeId,
                Name = editTaskTypeName.Trim()
            };

            // Замена: Http.PutAsJsonAsync -> ApiService.PutAsJsonAsync
            var response = await ApiService.PutAsJsonAsync("api/TaskType", request);

            if (response.IsSuccessStatusCode)
            {
                isEditing = null;
                editTaskTypeName = string.Empty;
                await LoadTaskTypes();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка редактирования типа задания: {ex.Message}");
        }
    }

    private void ShowDeleteModal(GetTaskTypeResponse taskType)
    {
        taskTypeToDelete = taskType;
        showDeleteModal = true;
    }

    private void CloseDeleteModal()
    {
        showDeleteModal = false;
        taskTypeToDelete = null;
    }

    private async Task DeleteTaskType()
    {
        if (taskTypeToDelete == null) return;

        isDeleting = true;
        StateHasChanged();

        try
        {
            // Замена: Http.DeleteAsync -> ApiService.DeleteAsync
            var response = await ApiService.DeleteAsync($"api/TaskType/{taskTypeToDelete.Id}");

            if (response.IsSuccessStatusCode)
            {
                showDeleteModal = false;
                taskTypeToDelete = null;
                await LoadTaskTypes();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка удаления типа задания: {ex.Message}");
        }
        finally
        {
            isDeleting = false;
            StateHasChanged();
        }
    }
}