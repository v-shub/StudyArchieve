@page "/admin/authors"
@using BlazorClient.Services.Contracts.Author
@inject ApiService ApiService

<PageTitle>Управление авторами</PageTitle>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-person me-2"></i>Управление авторами</h2>
        <button class="btn btn-primary" @onclick="ShowAddModal">
            <i class="bi bi-plus-circle me-2"></i>Добавить автора
        </button>
    </div>

    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Загрузка...</span>
            </div>
            <p class="mt-2">Загрузка данных...</p>
        </div>
    }
    else if (authors?.Any() == true)
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Имя автора</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var author in authors)
                            {
                                <tr>
                                    <td>@author.Id</td>
                                    <td>
                                        @if (isEditing == author.Id)
                                        {
                                            <input @bind="editAuthorName" class="form-control form-control-sm" />
                                        }
                                        else
                                        {
                                            @author.Name
                                        }
                                    </td>
                                    <td>
                                        @if (isEditing == author.Id)
                                        {
                                            <button class="btn btn-success btn-sm me-2" @onclick="() => SaveEdit(author.Id)">
                                                <i class="bi bi-check"></i>
                                            </button>
                                            <button class="btn btn-secondary btn-sm" @onclick="CancelEdit">
                                                <i class="bi bi-x"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-warning btn-sm me-2" @onclick="() => StartEdit(author)">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button class="btn btn-danger btn-sm" @onclick="() => ShowDeleteModal(author)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>Авторы не найдены
        </div>
    }
</div>

<!-- Модальное окно добавления -->
@if (showAddModal)
{
    <div class="modal show d-block" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Добавить автора</h5>
                    <button type="button" class="btn-close" @onclick="CloseAddModal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Имя автора:</label>
                        <input @bind="newAuthorName" class="form-control" placeholder="Введите имя автора" />
                        @if (!string.IsNullOrEmpty(validationError))
                        {
                            <div class="text-danger small mt-1">@validationError</div>
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseAddModal">Отмена</button>
                    <button type="button" class="btn btn-primary" @onclick="AddAuthor" disabled="@isSaving">
                        @if (isSaving)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                        }
                        Добавить
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Модальное окно удаления -->
@if (showDeleteModal && authorToDelete != null)
{
    <div class="modal show d-block" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Подтверждение удаления</h5>
                    <button type="button" class="btn-close" @onclick="CloseDeleteModal"></button>
                </div>
                <div class="modal-body">
                    <p>Вы уверены, что хотите удалить автора <strong>"@authorToDelete.Name"</strong>?</p>
                    <p class="text-danger"><small>Это действие нельзя отменить.</small></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseDeleteModal">Отмена</button>
                    <button type="button" class="btn btn-danger" @onclick="DeleteAuthor" disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                        }
                        Удалить
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<GetAuthorResponse> authors = new();
    private bool isLoading = true;
    private bool showAddModal = false;
    private bool showDeleteModal = false;
    private bool isSaving = false;
    private bool isDeleting = false;
    private string newAuthorName = string.Empty;
    private string validationError = string.Empty;
    private GetAuthorResponse? authorToDelete = null;
    private int? isEditing = null;
    private string editAuthorName = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadAuthors();
    }

    private async Task LoadAuthors()
    {
        try
        {
            isLoading = true;
            StateHasChanged();

            // Замена: Http.GetFromJsonAsync -> ApiService.GetFromJsonAsync
            authors = await ApiService.GetFromJsonAsync<List<GetAuthorResponse>>("api/Author") ?? new();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка загрузки авторов: {ex.Message}");
            authors = new();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void ShowAddModal()
    {
        showAddModal = true;
        newAuthorName = string.Empty;
        validationError = string.Empty;
    }

    private void CloseAddModal()
    {
        showAddModal = false;
        validationError = string.Empty;
    }

    private async Task AddAuthor()
    {
        if (string.IsNullOrWhiteSpace(newAuthorName))
        {
            validationError = "Поле не может быть пустым";
            return;
        }

        isSaving = true;
        StateHasChanged();

        try
        {
            var request = new CreateAuthorRequest { Name = newAuthorName.Trim() };

            // Замена: Http.PostAsJsonAsync -> ApiService.PostAsJsonAsync
            var response = await ApiService.PostAsJsonAsync("api/Author", request);

            if (response.IsSuccessStatusCode)
            {
                showAddModal = false;
                newAuthorName = string.Empty;
                await LoadAuthors();
            }
            else
            {
                validationError = "Ошибка при добавлении автора";
            }
        }
        catch (Exception ex)
        {
            validationError = "Ошибка соединения с сервером";
            Console.WriteLine($"Ошибка добавления автора: {ex.Message}");
        }
        finally
        {
            isSaving = false;
            StateHasChanged();
        }
    }

    private void StartEdit(GetAuthorResponse author)
    {
        isEditing = author.Id;
        editAuthorName = author.Name;
    }

    private void CancelEdit()
    {
        isEditing = null;
        editAuthorName = string.Empty;
    }

    private async Task SaveEdit(int authorId)
    {
        if (string.IsNullOrWhiteSpace(editAuthorName))
        {
            return;
        }

        try
        {
            var request = new UpdateAuthorRequest
            {
                Id = authorId,
                Name = editAuthorName.Trim()
            };

            // Замена: Http.PutAsJsonAsync -> ApiService.PutAsJsonAsync
            var response = await ApiService.PutAsJsonAsync("api/Author", request);

            if (response.IsSuccessStatusCode)
            {
                isEditing = null;
                editAuthorName = string.Empty;
                await LoadAuthors();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка редактирования автора: {ex.Message}");
        }
    }

    private void ShowDeleteModal(GetAuthorResponse author)
    {
        authorToDelete = author;
        showDeleteModal = true;
    }

    private void CloseDeleteModal()
    {
        showDeleteModal = false;
        authorToDelete = null;
    }

    private async Task DeleteAuthor()
    {
        if (authorToDelete == null) return;

        isDeleting = true;
        StateHasChanged();

        try
        {
            // Замена: Http.DeleteAsync -> ApiService.DeleteAsync
            var response = await ApiService.DeleteAsync($"api/Author/{authorToDelete.Id}");

            if (response.IsSuccessStatusCode)
            {
                showDeleteModal = false;
                authorToDelete = null;
                await LoadAuthors();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка удаления автора: {ex.Message}");
        }
        finally
        {
            isDeleting = false;
            StateHasChanged();
        }
    }
}