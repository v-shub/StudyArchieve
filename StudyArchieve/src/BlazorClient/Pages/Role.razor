@page "/admin/roles"
@using BlazorClient.Services.Contracts.Role
@inject ApiService ApiService

<PageTitle>Управление ролями</PageTitle>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-person-badge me-2"></i>Управление ролями</h2>
        <button class="btn btn-primary" @onclick="ShowAddModal">
            <i class="bi bi-plus-circle me-2"></i>Добавить роль
        </button>
    </div>

    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Загрузка...</span>
            </div>
            <p class="mt-2">Загрузка данных...</p>
        </div>
    }
    else if (roles?.Any() == true)
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Название роли</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var role in roles)
                            {
                                <tr>
                                    <td>@role.Id</td>
                                    <td>
                                        @if (isEditing == role.Id)
                                        {
                                            <input @bind="editRoleName" class="form-control form-control-sm" />
                                        }
                                        else
                                        {
                                            @role.RoleName
                                        }
                                    </td>
                                    <td>
                                        @if (isEditing == role.Id)
                                        {
                                            <button class="btn btn-success btn-sm me-2" @onclick="() => SaveEdit(role.Id)">
                                                <i class="bi bi-check"></i>
                                            </button>
                                            <button class="btn btn-secondary btn-sm" @onclick="CancelEdit">
                                                <i class="bi bi-x"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-warning btn-sm me-2" @onclick="() => StartEdit(role)">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button class="btn btn-danger btn-sm" @onclick="() => ShowDeleteModal(role)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>Роли не найдены
        </div>
    }
</div>

<!-- Модальное окно добавления -->
@if (showAddModal)
{
    <div class="modal show d-block" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Добавить роль</h5>
                    <button type="button" class="btn-close" @onclick="CloseAddModal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Название роли:</label>
                        <input @bind="newRoleName" class="form-control" placeholder="Введите название роли" />
                        @if (!string.IsNullOrEmpty(validationError))
                        {
                            <div class="text-danger small mt-1">@validationError</div>
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseAddModal">Отмена</button>
                    <button type="button" class="btn btn-primary" @onclick="AddRole" disabled="@isSaving">
                        @if (isSaving)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                        }
                        Добавить
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Модальное окно удаления -->
@if (showDeleteModal && roleToDelete != null)
{
    <div class="modal show d-block" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Подтверждение удаления</h5>
                    <button type="button" class="btn-close" @onclick="CloseDeleteModal"></button>
                </div>
                <div class="modal-body">
                    <p>Вы уверены, что хотите удалить роль <strong>"@roleToDelete.RoleName"</strong>?</p>
                    <p class="text-danger"><small>Это действие нельзя отменить.</small></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseDeleteModal">Отмена</button>
                    <button type="button" class="btn btn-danger" @onclick="DeleteRole" disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                        }
                        Удалить
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<GetRoleResponse> roles = new();
    private bool isLoading = true;
    private bool showAddModal = false;
    private bool showDeleteModal = false;
    private bool isSaving = false;
    private bool isDeleting = false;
    private string newRoleName = string.Empty;
    private string validationError = string.Empty;
    private GetRoleResponse? roleToDelete = null;
    private int? isEditing = null;
    private string editRoleName = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadRoles();
    }

    private async Task LoadRoles()
    {
        try
        {
            isLoading = true;
            StateHasChanged();

            // Замена: Http.GetFromJsonAsync -> ApiService.GetFromJsonAsync
            roles = await ApiService.GetFromJsonAsync<List<GetRoleResponse>>("api/Role") ?? new();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка загрузки ролей: {ex.Message}");
            roles = new();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void ShowAddModal()
    {
        showAddModal = true;
        newRoleName = string.Empty;
        validationError = string.Empty;
    }

    private void CloseAddModal()
    {
        showAddModal = false;
        validationError = string.Empty;
    }

    private async Task AddRole()
    {
        if (string.IsNullOrWhiteSpace(newRoleName))
        {
            validationError = "Поле не может быть пустым";
            return;
        }

        isSaving = true;
        StateHasChanged();

        try
        {
            var request = new CreateRoleRequest { RoleName = newRoleName.Trim() };

            // Замена: Http.PostAsJsonAsync -> ApiService.PostAsJsonAsync
            var response = await ApiService.PostAsJsonAsync("api/Role", request);

            if (response.IsSuccessStatusCode)
            {
                showAddModal = false;
                newRoleName = string.Empty;
                await LoadRoles();
            }
            else
            {
                validationError = "Ошибка при добавлении роли";
            }
        }
        catch (Exception ex)
        {
            validationError = "Ошибка соединения с сервером";
            Console.WriteLine($"Ошибка добавления роли: {ex.Message}");
        }
        finally
        {
            isSaving = false;
            StateHasChanged();
        }
    }

    private void StartEdit(GetRoleResponse role)
    {
        isEditing = role.Id;
        editRoleName = role.RoleName;
    }

    private void CancelEdit()
    {
        isEditing = null;
        editRoleName = string.Empty;
    }

    private async Task SaveEdit(int roleId)
    {
        if (string.IsNullOrWhiteSpace(editRoleName))
        {
            return;
        }

        try
        {
            var request = new UpdateRoleRequest
            {
                Id = roleId,
                RoleName = editRoleName.Trim()
            };

            // Замена: Http.PutAsJsonAsync -> ApiService.PutAsJsonAsync
            var response = await ApiService.PutAsJsonAsync("api/Role", request);

            if (response.IsSuccessStatusCode)
            {
                isEditing = null;
                editRoleName = string.Empty;
                await LoadRoles();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка редактирования роли: {ex.Message}");
        }
    }

    private void ShowDeleteModal(GetRoleResponse role)
    {
        roleToDelete = role;
        showDeleteModal = true;
    }

    private void CloseDeleteModal()
    {
        showDeleteModal = false;
        roleToDelete = null;
    }

    private async Task DeleteRole()
    {
        if (roleToDelete == null) return;

        isDeleting = true;
        StateHasChanged();

        try
        {
            // Замена: Http.DeleteAsync -> ApiService.DeleteAsync
            var response = await ApiService.DeleteAsync($"api/Role/{roleToDelete.Id}");

            if (response.IsSuccessStatusCode)
            {
                showDeleteModal = false;
                roleToDelete = null;
                await LoadRoles();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка удаления роли: {ex.Message}");
        }
        finally
        {
            isDeleting = false;
            StateHasChanged();
        }
    }
}